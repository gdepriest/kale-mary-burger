<div class="jumbotron text-center">
  <img src="https://storage.needpix.com/rsynced_images/burger-2026802_1280.png" class="img-fluid" id="burgerPic"alt="burger">
  <h1>Between Two Puns Burgers</h1>
</div>

<div class="container">

  <div id="orderStation" class="text-center">
    <div class="header">
      <h2>Order Your Burger!</h2>
    </div> 

    <form class="create-form text-center">

      <div class="form-group">
        <label for="ca">Burger Name:</label>
        <input type="text" id="ca" name="name">
      </div>

      <button class="btn-lg" id="order" type="submit"><span class="fas fa-hamburger"></span></button>

    </form>

  </div>

  <div class="row">
    <div class="col-md-6">

      <h2>Orders up!</h2>

      <ul>
        {{#each burgers}}
          {{#unless devoured}}
            {{> burgers/burger-block devoured=false}}
          {{/unless}}
        {{/each}}
      </ul>

    </div>

    <div class="col-md-6">
      <h2>Devoured Burgers</h2>

      <ul id="dvrd">
        {{#each burgers}}
          {{#if devoured}}
            {{> burgers/burger-block devoured=true}}
          {{/if}}
        {{/each}}
      </ul>

    </div>

  </div>
</div>






